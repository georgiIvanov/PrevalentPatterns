<Window x:Class="Memento.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Memento="clr-namespace:Memento"
        Title="MainWindow" Height="391" Width="543">
    <Grid Height="500" Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Memento:InkCanvasWithUndo Height="auto" HorizontalAlignment="Left" Margin="10, 10, 0, 0" x:Name="canvasWithUndo"
                   VerticalAlignment="Top" Width="auto"/>
        <Label Grid.Column="2" x:Name="statesCount" />
    </Grid>
</Window>
